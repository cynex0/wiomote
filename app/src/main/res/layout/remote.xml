<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/configurations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_back"
        android:drawablePadding="15dp"
        android:fontFamily="@font/archivo_semi_expanded_regular"
        android:letterSpacing="-0.02"
        android:padding="@dimen/default_margin"
        android:text="@string/configurations"
        android:textColor="?attr/colorOnBackground"
        android:textSize="@dimen/title_text_size" />

    <LinearLayout
        android:id="@+id/wio_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/container_background"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/archivo_semi_expanded_regular"
                android:gravity="start|center_vertical"
                android:lineHeight="@dimen/title_text_size"
                android:maxLines="1"
                android:padding="@dimen/button_padding"
                android:text="Remote Label"
                android:textColor="?attr/colorOnBackground"
                android:textSize="@dimen/title_text_size" />


            <se.gu.wiomote.views.CircleLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/power"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background_wio_ripple"
                    android:padding="10dp"
                    android:src="@drawable/ic_power" />

            </se.gu.wiomote.views.CircleLinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <se.gu.wiomote.views.CircleLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="50dp"
                android:orientation="horizontal"
                android:rotation="45"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/up"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/button_background_wio_ripple" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/left"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/button_background_wio_ripple" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/right"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/button_background_wio_ripple" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/down"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/button_background_wio_ripple" />

                </LinearLayout>

            </se.gu.wiomote.views.CircleLinearLayout>

            <TextView
                android:id="@+id/ok"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/button_background_wio_ok_ripple"
                android:fontFamily="@font/archivo_semi_expanded_regular"
                android:gravity="center"
                android:src="@drawable/ic_power"
                android:text="@string/ok"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:clipToPadding="false"
        android:paddingRight="10dp" />

</LinearLayout>