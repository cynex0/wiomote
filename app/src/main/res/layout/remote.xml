<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_back"
        android:drawablePadding="15dp"
        android:fontFamily="@font/archivo_semi_expanded_regular"
        android:letterSpacing="-0.02"
        android:padding="@dimen/default_margin"
        android:text="Configurations"
        android:textColor="?attr/colorOnBackground"
        android:textSize="@dimen/title_text_size" />

    <LinearLayout
        android:id="@+id/wio_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/container_background_ripple"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_semi_expanded_regular"
            android:gravity="start|center_vertical"
            android:lineHeight="@dimen/title_text_size"
            android:padding="@dimen/button_padding"
            android:text="Local Remote"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="@dimen/title_text_size" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:clipToPadding="false"
        android:paddingRight="10dp" />

</LinearLayout>